# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[{*.go,go.mod,go.sum}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[{*.yaml,*.yml}]
indent_style = space
indent_size = 2
